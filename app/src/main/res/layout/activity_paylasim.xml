<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PaylasimActivity">


    <EditText
        android:id="@+id/paylasimText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="64dp"
        android:ems="10"
        android:hint="Yorumlarinizi Giriniz:"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPaylasim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="paylas"
        app:layout_constraintBaseline_toBaselineOf="@+id/resimPaylas"
        app:layout_constraintEnd_toEndOf="@+id/paylasimText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="241dp"
        android:layout_height="156dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPaylasim"
        android:src="@drawable/ic_baseline_image_24"

        />

    <Button
        android:id="@+id/resimPaylas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"

        android:text="resÄ±m paylas"
        app:layout_constraintEnd_toStartOf="@+id/btnPaylasim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paylasimText" />
</androidx.constraintlayout.widget.ConstraintLayout>