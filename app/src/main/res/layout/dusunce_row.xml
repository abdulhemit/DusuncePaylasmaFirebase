<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:id="@+id/kullaniciAdi_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="KullaniciAdki"
        android:layout_margin="5dp"
        android:textColor="#0C5BFA"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/paylasim_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="paylasilanYorumlar"
        android:layout_margin="5sp"
        android:textSize="18dp"
        android:textColor="#30589E"
        app:layout_constraintTop_toBottomOf="@id/kullaniciAdi_id"

        />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/paylasim_id"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_image_24"
        />

</androidx.constraintlayout.widget.ConstraintLayout>